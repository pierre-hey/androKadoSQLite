<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigurationActivity"
   >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_config"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/design_default_color_primary"
        app:title="Configuration"
        />

    <TextView
        android:id="@+id/tv_tri_par_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tri par prix"

        app:layout_constraintTop_toBottomOf="@id/toolbar_config"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        />

    <Switch
        android:id="@+id/switch_tri_par_prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:ignore="UseSwitchCompatOrMaterialXml"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_config"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_prix_defaut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prix par dÃ©faut"

        app:layout_constraintTop_toBottomOf="@id/switch_tri_par_prix"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10dp"
        />


    <EditText
        android:id="@+id/et_prix_defaut"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"


        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_prix_defaut"
        app:layout_constraintBottom_toBottomOf="@id/tv_prix_defaut"
        android:textSize="13sp"
        android:layout_margin="10dp"
        />


    <Button
        android:id="@+id/btn_congif_tri_svg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sauvegarder"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:onClick="saveSharedPref"
        />
</androidx.constraintlayout.widget.ConstraintLayout>